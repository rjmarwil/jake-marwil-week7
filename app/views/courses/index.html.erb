<h1>Courses</h1>

<br/>

<%= link_to 'New Course', new_course_path %>

<br/><br/>

<table border=1>
  <thead>
    <tr>
      <th>Title</th>
      <th>Day or Night</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.title, course %></td>
        <% if course.day_night == true %>
        <td>Day</td>
        <% else %>
        <td>Night</td>
        <% end %>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
