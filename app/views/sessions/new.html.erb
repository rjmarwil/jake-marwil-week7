<h1>Log In!</h1>

<br/>

<%= form_tag '/login' do %>

  <% if alert %>
    <p><%= alert %></p>
  <% end %>

<br/>

  <%= label_tag :user_name %>
  <%= text_field_tag :user_name %>

<br/>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

<br/>

  <%= submit_tag "Log In" %>

<% end %>
